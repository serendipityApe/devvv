{
  "name": "devvv",
  "version": "1.0.0",
  "private": true,
  "author": "wang", 
  "description": "common toolkit", 
  "keywords": ["dev"], 
  "repository": {
    "type": "git",
    "url": "https://github.com/serendipityApe/devvv"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "init": "npm install && lerna bootstrap",
    "format": "prettier --config .prettierrc.json --write \"packages/**/*.{js,ts}\"",
    "eslint": "eslint packages/ --fix --cache --quiet --ext .js,.jsx,.ts,.tsx",
    "preRelease": "lerna run clean && lerna run build",
    "publish": "lerna publish",
    "dev": "lerna run dev --parallel"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^16.2.1",
    "eslint": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.3.0",
    "lerna": "^6.6.1",
    "lint-staged": "^10.2.4",
    "prettier": "^2.7.1"
  },
  "lint-staged": {
    "*.{js,json,yml,yaml,css,scss,ts,tsx,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "npx commitlint --edit "
    }
  }
}
